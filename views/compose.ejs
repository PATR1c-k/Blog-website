<%- include("partials/header"); -%>

    <h1>Compose</h1>
    <form action="/compose" method="post" class="">
        <div class="form-group">
            <div class="mb-3">
                <label for="Title" class="form-label">Title</label>
                <input type="text" class="form-control" id="Title" name="postTitle" aria-describedby="titlehelp">
                <div id="titlehelp" class="form-text">Enter your title for content here.</div>
            </div>
            <div class="mb-3 ">
                <label for="multiline" class="form-label">Post</label>
                <textarea name="postBody" id="multiline" class="form-control" cols="30" rows="5"></textarea>
            </div>
        </div>
        <button type="submit" class="btn btn-dark">Post</button>

    </form>

    <%- include("partials/footer"); -%>